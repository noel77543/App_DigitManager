<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@android:color/white" />
            <gradient
                android:centerColor="@color/toolbar_center_color"
                android:endColor="@color/toolbar_end_color"
                android:startColor="@color/toolbar_color" />
        </shape>
    </item>
</layer-list>